<script>



    function changeDate() {
        debugger;
        $('#List_Container').html();
        var year = $('#NepYears').val();
        var month = $('#months').val();
        var day = $('#days').val();
        var bsadchange = $("input[type='radio'][name='adbschange']:checked").val();

        {

            $.ajax({
                url: '/Reports/DateConvertor',
                //type: "post",
                //dataType: "JSON",
                // async: true,
                method: "post",
                type: "application/json",

                data: {
                    year: year,
                    month: month,
                    day: day,
                    bsadchange: bsadchange

                }
                ,
                success: function (x) {
                    debugger;
                   
                    console.log(x);
                    $('#hiddenresult').show();
                    $('#message').text(x);

                }

                , error: function (result) {
                    debugger;

                    alert("something went wrongsss!!");
                }


            });
        }
    }
</script>










