<div class="container" style="padding: 50px 0;">
    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            @using (Html.BeginForm("ChangePassword", "users", FormMethod.Post))
            {
                var msg = @ViewBag.message;
                <fieldset>
                    <h2>Change Password</h2>
                    <hr class="colorgraph">
                    <div class="form-group">
                        <input type="password" name="oldPassword" id="oldPassword" class="form-control input-lg" placeholder="Old Password" required />
                    </div>
                    <div class="form-group">
                        <input type="password" name="newOldPassword" id="newOldPassword" class="form-control input-lg" placeholder="New Password" required />
                    </div>
                    @*<span class="button-checkbox">
                        <button type="button" class="btn" data-color="info">Remember Me</button>
                        <input type="checkbox" name="remember_me" id="remember_me" checked="checked" class="hidden">


                        <a href="~/users/ForgotPassword" class="btn btn-link pull-right">Forgot Password?</a>



                    </span>*@
                    <hr class="colorgraph">
                   
                        <div class="form-group">
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="Change Password">
                        </div>

                       
                   

                    <div class="row">
                        <h3>@msg</h3>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
