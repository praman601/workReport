    function addWork() {
        debugger;
        $('#List_Container').html();
        var workTypeId = 'Call';
        var issueTypeId = 0;
        var munId = $('#mun').val();
        var timeId = 0;
        var userId = '@Session["userId"]';
        var workDate = $('#workDate').val();
        var workDet = $('#workDet').val();
        if (munId == '') {
            alert('Please Enter Sth');
            
        }
        else
        {

            $.ajax({
                url: '/workLists/create',
                //type: "post",
                //dataType: "JSON",
                // async: true,
                method: "post",
                type: "application/json",

                data: {
                    workTypeId: workTypeId,
                    issueTypeId: issueTypeId,
                    munId: munId,
                    timeId: timeId,
                    userId: userId,
                    workDate: workDate,
                    workDet: workDet

                }
                ,
                success: function (result) {
                    debugger;



                    $('#List_Container').html(result);
                    $("#work_Types").val('Call');
                    $("#issue_Types").val(0);
                    $("#mun").val('');
                    $("#Time").val(0);
                    $('#workDet').val('');
                    $("#workDate").val();
                }
                , error: function (result) {
                    debugger;

                    alert("something went wrongsss!!");
                }


            });
        }
    }
</script>
