@model IPagedList<workReport.Models.workList>

@using PagedList.Mvc;
@using PagedList;

<h2>Index</h2>


@using (Html.BeginForm())
{


    <div class="form-group">
        <div class="row">
            <div class="col-md-3">
                @Html.Editor("workDate", new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control "@*, @Value = @DateTime.Now.ToShortDateString()*@}
})
            </div>
           
               
                <div class="col-md-3">
                    @Html.Editor("workDet", new { htmlAttributes = new { @class = "form-control",placeholder="Enter Detail" } })
                  
                </div>
            

            <div class="col-md-2">
                <input type="button" class="btn  btn-primary btn-block" value="Add" onclick="return addWork()">
            </div>
        </div>
        <br />
       
        <br />

        <br />

    </div>


}

<div id="List_Container">
    <table class="table">
        <tr>
            <th>
                SN
            </th>

            <th>
                Date
            </th>
            <th>
                Details
            </th>

           

            <th></th>
        </tr>
        @{ int rowNo = 0; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(rowNo += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.workDet)
                </td>

                
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.workListId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.workListId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.workListId })
                </td>
            </tr>
        }

    </table>
    @Html.PagedListPager(Model, i => Url.Action("addHoliday", "workLists", new { i }))

</div>
@section scripts {

    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script>

        $(document).ready(function () {
            debugger;
            $('#workDate').datepicker({ dateFormat: 'yy-mm-dd' }).datepicker("setDate", new Date());
        });
    </script>

}


<script>



    function addWork() {
        debugger;
        $('#List_Container').html();
        var workTypeId = "";
        var issueTypeId = "";
        var munId = "";
        var timeId ="";
        var userId = '@Session["userId"]';
        var workDate = $('#workDate').val();
        var workDet = $('#workDet').val();

        {

            $.ajax({
                url: '/workLists/CreateHoliday',
                //type: "post",
                //dataType: "JSON",
                // async: true,
                method: "post",
                type: "application/json",

                data: {
                    workTypeId: workTypeId,
                    issueTypeId: issueTypeId,
                    munId: munId,
                    timeId: timeId,
                    userId: userId,
                    workDate: workDate,
                    workDet: workDet

                }
                ,
                success: function (result) {
                    debugger;



                    $('#List_Container').html(result);
                  
                    $("#workDate").val();
                    $('#workDet').val('');

                }
                , error: function (result) {
                    debugger;

                    alert("something went wrongsss!!");
                }


            });
        }
    }
</script>
